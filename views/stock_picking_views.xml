<odoo>
    <data>
        <!-- Inherit the stock picking view to add product details -->
        <record id="view_stock_picking_inherit" model="ir.ui.view">
            <field name="name">stock.picking.inherit.product.details</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_name" readonly="1"/>
                    <field name="barcode" readonly="1"/>
                    <field name="cost_price" readonly="1"/>
                    <field name="sale_price" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>