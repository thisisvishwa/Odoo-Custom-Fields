<odoo>
    <data>

        <!-- Inherit Sale Order Line Form View to add product details -->
        <record id="view_sale_order_line_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.form.inherit.product.details</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_name" readonly="1"/>
                    <field name="barcode" readonly="1"/>
                    <field name="cost_price" readonly="1"/>
                    <field name="sale_price" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Line Tree View to add product details -->
        <record id="view_sale_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.tree.inherit.product.details</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_name" readonly="1"/>
                    <field name="barcode" readonly="1"/>
                    <field name="cost_price" readonly="1"/>
                    <field name="sale_price" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>