<odoo>
    <data>
        <!-- Inherit the view for purchase order line to add product details -->
        <record id="view_purchase_order_line_inherit" model="ir.ui.view">
            <field name="name">purchase.order.line.product.detail.form.inherit</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_name" readonly="1"/>
                    <field name="barcode" readonly="1"/>
                    <field name="cost_price" readonly="1"/>
                    <field name="sale_price" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the tree view for purchase order line to add product details -->
        <record id="view_purchase_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.line.product.detail.tree.inherit</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_name" readonly="1"/>
                    <field name="barcode" readonly="1"/>
                    <field name="cost_price" readonly="1"/>
                    <field name="sale_price" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>