<odoo>
    <data noupdate="1">
        <!-- Group for Product Detail Extension Module -->
        <record id="product_detail_extension_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Access rights for Product Detail Extension Module -->
        <record id="product_detail_extension_rule" model="ir.rule">
            <field name="name">Product Detail Extension Access</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('product_detail_extension_group_user'))]"/>
        </record>

        <!-- Initial data specific to Product Detail Extension Module -->
        <record id="product_detail_extension_data" model="ir.model.data">
            <field name="name">product_detail_extension_data</field>
            <field name="module">product_detail_extension</field>
            <field name="noupdate">True</field>
        </record>
    </data>
</odoo>